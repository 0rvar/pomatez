{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env.*", "packages/**"],
  "pipeline": {
    "build": {
      "outputs": ["build/**", "dist/**", "public/**"],
      "outputMode": "new-only"
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["GOOGLE_VERIFICATION", "GA_TRACKING_ID", "NODE_ENV"]
    },
    "lint": {
      "outputMode": "new-only"
    },
    "test": {
      "outputMode": "new-only"
    },
    "preview": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"],
      "outputMode": "new-only"
    }
  }
}
