{
  "name": "pomatez",
  "version": "1.2.2",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:app": "turbo run dev --filter=@pomatez/desktop",
    "dev:web": "turbo run dev --filter=@pomatez/website",
    "build": "turbo run build --filter=@pomatez/website",
    "preview": "turbo run preview --filter=@pomatez/website",
    "lint": "turbo run lint --filter=@pomatez/website",
    "test": "turbo run test --filter=@pomatez/ui",
    "gen:tts": "lerna run gen:tts --stream",
    "format": "prettier --write .",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{md,json,css,scss,sass}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@pomatez/eslint-config": "*",
    "@storybook/addon-essentials": "^7.4.1",
    "@storybook/addon-interactions": "^7.4.1",
    "@storybook/addon-links": "^7.4.1",
    "@storybook/addon-mdx-gfm": "^7.4.1",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.4.1",
    "@storybook/react": "^7.4.1",
    "@storybook/react-vite": "^7.4.1",
    "@storybook/testing-library": "^0.2.0",
    "eslint-plugin-storybook": "^0.6.13",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.4.1",
    "turbo": "^1.10.13",
    "typescript": "5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
