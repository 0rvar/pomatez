{
  "name": "pomatez",
  "version": "1.2.2",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:app": "turbo run dev --output-logs=new-only --filter=@pomatez/desktop",
    "dev:web": "turbo run dev --output-logs=new-only --filter=@pomatez/website",
    "build": "turbo run build --output-logs=new-only --filter=@pomatez/website",
    "preview": "turbo run preview --output-logs=new-only --filter=@pomatez/website",
    "lint": "turbo run lint --output-logs=new-only --filter=@pomatez/website",
    "gen:tts": "lerna run gen:tts --stream",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{md,json,css,scss,sass}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@pomatez/eslint-config": "*",
    "husky": "^8.0.0",
    "lint-staged": "latest",
    "prettier": "latest",
    "turbo": "latest",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
